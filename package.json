{
  "name": "codeflow",
  "version": "1.0.0",
  "description": "Local development environment with integrated terminal and browser automation",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/mcp/server-standalone.js",
    "dev": "nodemon src/mcp/server-standalone.js",
    "build": "echo 'Build script placeholder'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:playwright": "playwright test",
    "test:browser": "node tests/browser-simulation.js",
    "test:all": "node tests/run-tests.js",
    "test:ui": "playwright test --ui",
    "lint": "eslint src/ || echo 'Linting skipped'"
  },
  "keywords": [
    "electron",
    "development",
    "terminal",
    "browser",
    "automation",
    "claude-code"
  ],
  "author": "CodeFlow",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "playwright": "^1.55.0"
  },
  "optionalDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "puppeteer": "^21.9.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.codeflow.app",
    "productName": "CodeFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ]
  }
}
